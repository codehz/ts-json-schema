{
  "name": "@codehz/ts-json-schema",
  "version": "0.0.3",
  "description": "将 TypeScript 类型转换为 JSON Schema 的简单工具（基于 TypeScript Compiler API）",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "typescript",
    "json-schema",
    "typescript-compiler-api",
    "schema",
    "ts-json-schema"
  ],
  "scripts": {
    "typecheck": "bunx tsc --noEmit",
    "build": "bunx tsdown -c tsdown.config.ts",
    "prepare": "bunx tsdown -c tsdown.config.ts",
    "test": "bun test",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codehz/ts-json-schema.git"
  },
  "bugs": {
    "url": "https://github.com/codehz/ts-json-schema/issues"
  },
  "homepage": "https://github.com/codehz/ts-json-schema#readme",
  "author": "codehz",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "mcp-bun": "^1.3.0",
    "prettier": "^3.7.4",
    "tsdown": "^0.17.2",
    "typescript": "^5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.mts"
    }
  }
}
